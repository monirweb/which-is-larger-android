<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.monirweb.myapplication.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#aa96da"
        android:textAlignment="center"
        android:padding="0dp">


        <ImageView
            android:id="@+id/clock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/clock"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/level_counter"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textDirection="ltr"
            android:textSize="22sp"
            android:padding="5dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/coin_counter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:textColor="#fff"/>

        <ImageView
            android:id="@+id/coin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/coin"
            android:padding="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_style_number"
            android:layout_marginEnd="5dp"
            android:textSize="36sp"
            android:id="@+id/left_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_style_number"
            android:textSize="36sp"
            android:layout_marginStart="5dp"
            android:id="@+id/right_button"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:background="@drawable/button_style_equal"
            android:text="@string/they_are_equal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </LinearLayout>

</LinearLayout>
